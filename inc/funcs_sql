{ [ -z "${vars}" ] || [ "${vars}" -ne 1 ]; } && {
    echo "Please load 'vars' file before..."
    return
}
##################### FIRST LINE #####################################

#### MySQL command
cmdMySQL() {
    local sDatabase sRequest

    if [ -z "$1" ] || [ -z "$2" ]; then
        return 1
    else
        sDatabase="$1"
        sRequest="$2"
        sVerbose="$3"
    fi

    case "$sDatabase" in
        "${gsblocklists_DB}")
            [ -n "${sVerbose}" ] && sVerbose="-echo"
            sqlite3 ${sVerbose} -cmd '.timeout 150000' "${sDatabase}" "${sRequest}"
            ;;
        *) mysql --defaults-extra-file=/root/.config.cnf --database="${sDatabase}" -w --connect-timeout=10 -s -N -e "${sRequest}" ${sVerbose} ;;
    esac

}

##################### LAST LINE ######################################
