##################### FIRST LINE #####################################

#### Shellcheck
gfnGetRepoValues 'Shellcheck'
if [ "$gsVersionInstalled" != "$gsVersionLatest" ]; then
    [ -f "${MySB_Files}/${gsRepoFile}" ] && mv -v "${MySB_Files}/${gsRepoFile}" "${MySB_Files}/${gsRepoFile}.tmp"
    gfnRepoManageByType
    tar --xz -xvf "${MySB_Files}/${gsRepoFile}" -C /tmp/
    mv -v /tmp/shellcheck-stable/shellcheck /usr/bin/shellcheck
    chmod -v +x /usr/bin/shellcheck
    /usr/bin/shellcheck --version
    rm -rfv /tmp/shellcheck-stable
    [ -f "${MySB_Files}/${gsRepoFile}" ] && rm -fv "${MySB_Files}/${gsRepoFile}.tmp"
fi

#### GeoIP update
gfnGetRepoValues 'GeoIPupdate' && gfnRepoManageByType
if [ "$gsVersionInstalled" != "$gsVersionLatest" ]; then
    # Change architecture if needed
    case $(getconf LONG_BIT) in
        32) gsRepoURL="${gsRepoURL//amd64/386}" ;;
    esac

    # Download DEB file
    [ -f "${gsRepoDir}/${gsRepoFile}" ] && mv -v "${gsRepoDir}/${gsRepoFile}" "${gsRepoDir}/${gsRepoFile}.tmp"
    gfnRepoManageByType
    [ -f "${gsRepoDir}/${gsRepoFile}" ] && rm -fv "${gsRepoDir}/${gsRepoFile}.tmp"

    if [ -f "${gsRepoDir}/${gsRepoFile}" ]; then
        dpkg -i "${gsRepoDir}/${gsRepoFile}"
    fi

    install -v -o root -g root -m 0644 $MySB_InstallDir/templates/other/etc.geoip.conf.tmpl /etc/GeoIP.conf

    # Disable the upgrade job
    cmdMySQL 'MySB_db' "UPDATE repositories SET upgrade='0' WHERE name='GeoIPupdate';" -v
fi

#### Composer
gfnGetRepoValues 'Composer'
gfnRepoManageByType
if [ "$gsVersionInstalled" != "$gsVersionLatest" ]; then
    gfnRepoManageByType
    chmod -v +x ${gsRepoDir}
    ${gsRepoDir} --version | grep 'Composer version'
fi
composer self-update

#### NodeJS
gfnGetRepoValues 'NodeJS' && gfnRepoManageByType
if [ $gnRepoUpgrade -eq 1 ] || [ "$gsSwitch" == "INSTALL" ]; then
    cd ${gsRepoDir} || exit
    if [ -d out/ ]; then
        make clean
    fi
    ./configure
    make -j$gsProcessors
    make install
    /sbin/ldconfig
    # Disable the upgrade job
    cmdMySQL 'MySB_db' "UPDATE repositories SET upgrade='0' WHERE name='NodeJS';" -v
fi

#### Python
echo
echo "########## Python"
# Update certificates for python
update-ca-certificates --fresh &>/dev/null
# Install PyOpenSSL for Python
pip install PyOpenSSL
pip3 install PyOpenSSL

#### Bower
echo
echo "########## Bower"
npm install -g npm-check-updates
npm install -g bower
bower update --allow-root

# -----------------------------------------
# shellcheck source=inc/includes_after
source "$(dirname "$0")"/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################
